<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".register_activity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/ic_back"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@id/register"
            android:layout_alignParentLeft="true">

        </ImageView>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:text="Register Yourself"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="75dp"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/enter_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_profile"
            android:layout_marginTop="120dp"
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="Enter Your Name"
            android:paddingLeft="7dp">
        </EditText>
        <EditText
            android:id="@+id/enter_mail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/enter_name"
            android:drawableLeft="@drawable/ic_mail"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="Enter your Email Adress"
            android:paddingLeft="7dp">
        </EditText>
        <EditText
            android:id="@+id/enter_mob"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_mob"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_below="@id/enter_mail"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="Enter your Mobile Number"
            android:paddingLeft="7dp">


        </EditText>

        <EditText
            android:drawableLeft="@drawable/ic_pass"
            android:id="@+id/enter_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/enter_mob"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="7dp">

        </EditText>
        <EditText
            android:drawableLeft="@drawable/ic_pass"
            android:id="@+id/enter_cnfrm_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/enter_pass"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="Re-Enter Your Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="7dp">


        </EditText>
        <Button
            android:id="@+id/reg_btn"
            android:layout_below="@id/enter_cnfrm_pass"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:text="Register"
            android:background="#FF1A1A"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_height="60dp">

        </Button>



    </RelativeLayout>




</LinearLayout>